{
  "name": "primo-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon core/server.ts",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q build/core/server.js\"",
    "dev2": "ts-node core/server.ts",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^9.12.0",
    "bcrypt": "^5.0.1",
    "compression": "1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "errorhandler": "1.5.1",
    "express": "^4.18.1",
    "glob": "8.0.3",
    "helmet": "^6.0.0",
    "http-status": "1.5.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.1",
    "passport": "0.6.0",
    "passport-google-oauth20": "2.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "1.7.2",
    "@types/cookie-session": "2.0.44",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.14",
    "@types/glob": "8.0.0",
    "@types/morgan": "1.9.3",
    "@types/node": "^18.7.18",
    "@types/passport": "1.0.11",
    "@types/passport-google-oauth20": "2.0.11",
    "@types/passport-local": "1.0.34",
    "concurrently": "^7.4.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "morgan": "1.10.0",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{css,js,ts,tsx}": [
      "prettier --write"
    ],
    "./**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        "120"
      ],
      "scope-case": [
        0
      ]
    }
  }
}
